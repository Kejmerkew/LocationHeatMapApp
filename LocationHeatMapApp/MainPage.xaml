<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:Class="LocationHeatMapApp.MainPage">


    <Grid>
        <maps:Map x:Name="UserMap" MapType="Street" IsShowingUser="true" />

        <HorizontalStackLayout VerticalOptions="End" Spacing="10" Margin="20">
            
            <Button Text="Clear Data" BackgroundColor="DarkRed" TextColor="White"
                    Clicked="OnClearClicked" />

            <Button x:Name="StartStopButton" Text="Start Tracking" BackgroundColor="Green" TextColor="White"
                    Clicked="OnStartStopClicked" />

        </HorizontalStackLayout>
    </Grid>

</ContentPage>
